
@{
    ViewData["Title"] = "Events Overview";
}

<h1>EventsOverview</h1>

<div class="d-flex flex-row">
    <a class="btn btn-success" asp-action="Create">Create event</a>
</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.ActionLink("Category", "Events", new { sortBy = ViewBag.SortCategoryParameter })            
        </th>
        <th>
            Description
        </th>
        <th>            
            @Html.ActionLink("Place", "Events", new { sortBy = ViewBag.SortPlaceParameter })          
        </th>
        <th>
            @Html.ActionLink("Start DateTime", "Events", new { sortBy = ViewBag.SortTimeParameter })            
        </th>
        <th>
            End DateTime
        </th>
        <th>
            AdditionalInfo
        </th>
        <th>
            ImageUrl
        </th>
        <th>
            Recurrency
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Category
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Place
            </td>
            <td>
                @item.StartDateTime
            </td>
            <td>
                @item.EndDateTime
            </td>
            <td>
                @item.AdditionalInfo
            </td>
            <td>
                @item.ImageUrl
            </td>
            <td>
                @item.Recurrency.ToString()
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>
