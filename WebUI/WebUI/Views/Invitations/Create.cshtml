@using WebUI.Models.Enums;
@using WebUI.Models.ViewModels;
@model CreateInvitationViewModel

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h3>Create an Invitation</h3>                
                <div>
                    <label class="form-label">Email</label>
                    <input class="form-control"
                           data-val="true"
                           data-val-required="The Email is required"
                           asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Role" class="control-label">Invite as</label>
                    <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<RoleToInvite>()"></select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>

</form>